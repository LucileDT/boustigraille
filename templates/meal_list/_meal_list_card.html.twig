<div class="card w-100 h-100">
    <div class="card-body bg-light">
        <h5 class="card-title">{{ meal_list.personName }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">
            Du
            {{ meal_list.startDate | format_date('full', locale='fr') }}&nbsp;{{ meal_list.isStartingAtLunch ? 'midi' : 'soir' }}
            au
            {{ meal_list.endDate | format_date('full', locale='fr') }}&nbsp;{{ meal_list.isEndingAtLunch ? 'midi' : 'soir' }}
        </h6>
        <p class="card-text">
            <ul>
                {% for mealQuantityForList in meal_list.meals %}
                    <li>
                        {{ mealQuantityForList.meal.name }}&nbsp;x{{ mealQuantityForList.quantity }}
                    </li>
                {% endfor %}
            </ul>
        </p>
    </div>
    <div class="card-footer bg-light border-top-0 text-center">
        <a class="btn btn-primary btn-sm" href="{{ path('meal_list_show', {'id': meal_list.id}) }}">
            Voir
        </a>
        <a class="btn btn-secondary btn-sm mt-5 mt-md-0" href="{{ path('meal_list_edit', {'id': meal_list.id}) }}">
            Ã‰diter
        </a>
    </div>
</div>
