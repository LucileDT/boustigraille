{% extends 'base.html.twig' %}

{% block title %}Listes de repas{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('meal_list_card') }}
{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('meal_list_card') }}
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Listes de repas
    </li>
{% endblock %}

{% block page_title %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col">
                <div class="page-heading">
                    <h6>
                        <a href="{{ path('home') }}">Accueil</a>
                        / Listes de repas
                    </h6>
                    <h2>Listes de repas</h2>
                </div>
            </div>
            {% if app.user is not null %}
                <div class="col-12 col-lg-4 text-end">
                    <a class="btn btn-primary btn-large" href="{{ path('meal_list_new') }}">
                        Enregistrer une nouvelle liste de repas
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="col">
            <div class="page-heading">
                <h2>En cours</h2>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        {% if current_meal_lists | length > 0 %}
            {% for mealList in current_meal_lists %}
                <div class="col-12 col-md-6 col-xl-4 col-xxl-3">
                    {{ include('meal_list/_meal_list_card.html.twig', {'meal_list': mealList}) }}
                </div>
            {% endfor %}
        {% else %}
            <div class="col text-center">
                <i class="text-muted">Aucun repas n'est prévu (pour le moment)</i>
            </div>
        {% endif %}
    </div>
    <div class="row mt-4">
        <div class="col">
            <div class="page-heading">
                <h2>À venir</h2>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        {% if future_meal_lists | length > 0 %}
            {% for mealList in future_meal_lists %}
                <div class="col-12 col-md-6 col-xl-4 col-xxl-3">
                    {{ include('meal_list/_meal_list_card.html.twig', {'meal_list': mealList}) }}
                </div>
            {% endfor %}
        {% else %}
            <div class="col text-center">
                <i class="text-muted">Aucun repas n'est prévu (pour le moment)</i>
            </div>
        {% endif %}
    </div>
    <div class="row mt-4">
        <div class="col">
            <div class="page-heading">
                <h2>Archives</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col table-responsive">
            {{ include('meal_list/_table.html.twig', {'meal_lists': past_meal_lists, 'show_action_buttons': true}) }}
        </div>
    </div>
{% endblock %}
