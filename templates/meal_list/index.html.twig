{% extends 'base.html.twig' %}

{% block title %}Listes de repas{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Listes de repas
    </li>
{% endblock %}

{% block page_title %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col">
                <div class="page-heading">
                    <h6>
                        <a href="{{ path('home') }}">Accueil</a>
                        / Listes de repas
                    </h6>
                    <h2>Listes de repas</h2>
                </div>
            </div>
            {% if app.user is not null %}
                <div class="col-12 col-lg-4 text-end">
                    <a class="btn btn-primary btn-large" href="{{ path('meal_list_new') }}">
                        Enregistrer une nouvelle liste de repas
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col">
            <h3>En cours</h3>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col table-responsive">
            {{ include('meal_list/_table.html.twig', {'meal_lists': current_meal_lists, 'show_action_buttons': true}) }}
        </div>
    </div>
    <hr />
    <div class="row mt-5">
        <div class="col">
            <h3>Futures</h3>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col table-responsive">
            {{ include('meal_list/_table.html.twig', {'meal_lists': future_meal_lists, 'form': grocery_list_form, 'show_action_buttons': true}) }}
        </div>
    </div>
    <hr />
    <div class="row mt-5">
        <div class="col">
            <h3>Pass√©s</h3>
        </div>
    </div>
    <div class="row">
        <div class="col table-responsive">
            {{ include('meal_list/_table.html.twig', {'meal_lists': past_meal_lists, 'show_action_buttons': true}) }}
        </div>
    </div>
{% endblock %}
