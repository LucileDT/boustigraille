{% extends 'base.html.twig' %}

{% block title %}Édition de la recette {{ recipe.name }}{% endblock %}

{% block page_breadcrumb %}
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                <li class="breadcrumb-item">Recettes</li>
                <li class="breadcrumb-item"><a href="{{ path('recipe_index') }}">Liste des recettes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Édition de la recette {{ recipe.name }}</li>
            </ol>
        </nav>
    </div>
{% endblock %}

{% block page_title %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col">
                <div class="page-heading">
                    <h2>Édition de la recette {{ recipe.name }}</h2>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{ include('recipe/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>
{% endblock %}
