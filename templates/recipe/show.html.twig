{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/recipe/show.css') }}">
{% endblock %}

{% block javascript %}
    <script src="{{ asset('javascript/recipe/show.js') }}"></script>
{% endblock %}

{% block title %}{{ recipe.name }}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Recettes</a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('recipe_index') }}">Liste des recettes</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        {{ recipe.name }}
    </li>
{% endblock %}

{% block body %}
    <div class="row my-5">
        <div class="col">
            <div class="recipe-header">
                {% if recipe.mainPictureFilename is empty %}
                    <img class="image-foreground" src="{{ asset('image/default-recipe-main-picture.jpg') }}">
                {% else %}
                    <img class="image-foreground" src="{{ asset('uploads/pictures/' ~ recipe.mainPictureFilename) }}">
                {% endif %}
                <div class="recipe-name row">
                    <div class="col">
                        <h1 class="text-white">
                            {% if app.user is not null %}
                                {% if app.user.hasFaved(recipe) %}
                                    <i
                                        id="toggle-favorite-button"
                                        class="action-icon ri-heart-fill text-white"
                                        data-toggle="tooltip"
                                        title="Retirer de mes favoris"></i>
                                {% else %}
                                    <i
                                        id="toggle-favorite-button"
                                        class="action-icon ri-heart-add-line text-whites"
                                        data-toggle="tooltip"
                                        title="Ajouter à mes favoris"></i>
                                {% endif %}

                                {{ include('recipe/_toggle_favorite_form.html.twig') }}
                            {% endif %}
                            {{ recipe.name }}
                        </h1>
                    </div>
                    {% if app.user is not null %}
                        <div class="col-2 text-right pr-5 mr-5">
                            {{ include('recipe/_delete_form.html.twig') }}
                        </div>
                    {% endif %}
                </div>
                <div class="recipe-controls">
                    {% if app.user is not null %}
                        <a class="btn btn-primary btn-large" href="{{ path('recipe_edit', {'id': recipe.id}) }}">Éditer</a>
                    {% endif %}
                </div>
                {% if recipe.mainPictureFilename is empty %}
                    <img class="image-background" src="{{ asset('image/default-recipe-main-picture.jpg') }}">
                {% else %}
                    <img class="image-background" src="{{ asset('uploads/pictures/' ~ recipe.mainPictureFilename) }}">
                {% endif %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <div class="bg-light p-5">
                <h3 class="">
                    <form class="form-inline">
                        <div class="form-group mb-2">
                            <label for="staticEmail2">Ingrédients pour</label>
                            <select id="ingredients-quantity" class="form-control ml-4">
                                <option value="1">1 part</option>
                                {% for i in 2..10 %}
                                    <option
                                        value="{{ i }}"
                                        {% if i == 4 %}
                                            selected="selected"
                                        {% endif %}
                                        >
                                        {{ i }} parts
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </form>
                </h3>
                <div class="my-4">
                    <form id="ingredients">
                        {% for ingredientQuantity in recipe.ingredients %}
                            {% set ingredient = ingredientQuantity.ingredient %}
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="ingredient-check-{{ ingredient.id }}">
                                <label class="custom-control-label" for="ingredient-check-{{ ingredient.id }}">
                                    <span class="quantity"
                                        data-quantity-for-one-portion="{{ ingredientQuantity.quantity }}">
                                        {{ ingredientQuantity.quantity }}
                                    </span>
                                    {% if not ingredientQuantity.isMeasuredByUnit %}
                                        {{ ingredient.measureType }} de
                                    {% endif %}
                                    <span class="text-lowercase">{{ ingredient.label }}</span>
                                    <a href="{{ path('ingredient_show', {'id': ingredient.id}) }}"
                                    target="_blank"
                                        class="text-muted">
                                        <small>Voir la fiche ingrédient</small>
                                    </a>
                                </label>
                            </div>
                        {% endfor %}
                    </form>
                </div>
                {{ include('recipe/_nutritional_values.html.twig', {'title': 'Valeurs nutritionnelles pour une part', 'paddingTop': 5}) }}
            </div>
        </div>
        <div class="col">
            <h2 class="">Préparation</h2>
            <div class="ml-5 my-4">
                {% if recipe.process | length > 0 %}
                    {{ recipe.process | markdown_to_html }}
                {% else %}
                    Vas-y à l'instinct c:
                {% endif %}
            </div>
            {% if recipe.comment | length > 0 %}
                <h2 class="mt-5 pt-2">Notes</h2>
                <div class="ml-5 my-4 text-muted font-italic">
                    {{ recipe.comment }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
