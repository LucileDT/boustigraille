{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('recipe_index') }}
{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('recipe_toggle_favorite') }}
    {{ encore_entry_script_tags('recipe_index') }}
{% endblock %}

{% block title %}Liste des Recettes{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Recettes</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Liste des Recettes
    </li>
{% endblock %}

{% block body %}
    <div class="row mt-5 mb-4">
        <div class="col-6">
            <h1>Liste des recettes</h1>
        </div>
        {% if app.user is not null %}
            <div class="col-6 text-end">
                <a class="btn btn-primary btn-large" href="{{ path('recipe_new') }}">Cr√©er une nouvelle recette</a>
            </div>
        {% endif %}
    </div>

    <div class="row">
        {% for recipe in recipes %}
            <div class="col-2 mb-5">
                {{ include('recipe/_recipe_card.html.twig') }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
