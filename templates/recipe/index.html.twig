{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/recipe/index.css') }}">
{% endblock %}

{% block title %}Liste des Recettes{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Recettes</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Liste des Recettes
    </li>
{% endblock %}

{% block body %}
    <div class="row mt-5 mb-4">
        <div class="col-6">
            <h1>Liste des recettes</h1>
        </div>
        {% if app.user is not null %}
            <div class="col-6 text-right">
                <a class="btn btn-primary btn-large" href="{{ path('recipe_new') }}">Créer une nouvelle recette</a>
            </div>
        {% endif %}
    </div>

    <div class="row">
        {% for recipe in recipes %}
            <div class="col-3 mb-5">
                <div class="recipe card h-100 text-center border-0 text-black">
                    {% if recipe.mainPictureFilename is empty %}
                        <img src="{{ asset('image/default-recipe-main-picture.jpg') }}" class="card-img" alt="">
                    {% else %}
                        <img src="{{ asset('uploads/pictures/' ~ recipe.mainPictureFilename) }}" class="card-img" alt="">
                    {% endif %}
                    <div class="card-img-overlay d-flex flex-column justify-content-between">
                        <div class="card-body mb-5 d-flex flex-column justify-content-between">
                            <h5 class="card-title">{{ recipe.name }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ recipe.energy | round }} kcal
                            </h6>
                        </div>
                        <div class="card-footer border-0 p-0 bg-transparent">
                            <div class="">
                                <a
                                    href="{{ path('recipe_show', {'id': recipe.id}) }}"
                                    class="btn btn-primary w-50">
                                    Voir
                                </a>
                            </div>
                            {% if app.user is not null %}
                                <div class="mt-4">
                                    <a
                                        href="{{ path('recipe_edit', {'id': recipe.id}) }}"
                                        class="btn btn-secondary w-50">
                                        Éditer
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
