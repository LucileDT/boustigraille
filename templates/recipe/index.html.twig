{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/recipe/index.css') }}">
{% endblock %}

{% block javascript %}
    <script src="{{ asset('javascript/recipe/_toggle_favorite.js') }}"></script>
{% endblock %}

{% block title %}Liste des Recettes{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Recettes</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Liste des Recettes
    </li>
{% endblock %}

{% block body %}
    <div class="row mt-5 mb-4">
        <div class="col-6">
            <h1>Liste des recettes</h1>
        </div>
        {% if app.user is not null %}
            <div class="col-6 text-right">
                <a class="btn btn-primary btn-large" href="{{ path('recipe_new') }}">Cr√©er une nouvelle recette</a>
            </div>
        {% endif %}
    </div>

    <div class="row">
        {% for recipe in recipes %}
            <div class="col-xl-2 col-lg-4 col-sm-6 col mb-5">
                {{ include('recipe/_recipe_card.html.twig') }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
