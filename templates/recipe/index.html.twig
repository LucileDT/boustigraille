{% extends 'base.html.twig' %}

{% block title %}Liste des Recettes{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Recettes</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Liste des Recettes
    </li>
{% endblock %}

{% block body %}
    <div class="row mt-5 mb-4">
        <div class="col-6">
            <h1>Liste des recettes</h1>
        </div>
        {% if app.user is not null %}
            <div class="col-6 text-right">
                <a class="btn btn-primary btn-large" href="{{ path('recipe_new') }}">Créer une nouvelle recette</a>
            </div>
        {% endif %}
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Commentaire</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in recipes %}
                        <tr>
                            <td>{{ recipe.id }}</td>
                            <td>{{ recipe.name }}</td>
                            <td
                                class="text-truncate"
                                title="{{ recipe.comment }}"
                                style="max-width: 25rem;"
                                >
                                <i class="text-muted">
                                    {{ recipe.comment }}
                                </i>
                            </td>
                            <td class="text-right">
                                <a
                                    class="btn-primary btn"
                                    href="{{ path('recipe_show', {'id': recipe.id}) }}"
                                    >
                                    Voir
                                </a>
                                {% if app.user is not null %}
                                    <a
                                        class="btn btn-secondary"
                                        href="{{ path('recipe_edit', {'id': recipe.id}) }}"
                                        >
                                        Éditer
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Pas de recettes pour l'instant !</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
