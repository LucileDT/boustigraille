{% extends 'base.html.twig' %}

{% block title %}Magasin {{ store.label }}{% endblock %}

{% block page_breadcrumb %}
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                <li class="breadcrumb-item">Administration</li>
                <li class="breadcrumb-item"><a href="{{ path('store_index') }}">Liste des magasins</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ store.label }}</li>
            </ol>
        </nav>
    </div>
{% endblock %}

{% block page_title %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col">
                <div class="page-heading">
                    <h2>
                        {{ store.label }}
                    </h2>
                </div>
            </div>
            <div class="col-12 col-lg-3 text-end">
                <div class="d-flex justify-content-end">
                    <a class="btn btn-primary btn-large ms-2" href="{{ path('store_edit', {'id': store.id}) }}">
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ store.id }}</td>
                    </tr>
                    <tr>
                        <th>Numéro d'ordre</th>
                        <td>{{ store.sortNumber }}</td>
                    </tr>
                    <tr>
                        <th>Label</th>
                        <td>{{ store.label }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
